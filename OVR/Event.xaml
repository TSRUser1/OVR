        <Label Content="Event Name :" HorizontalAlignment="Left" Margin="71,80,0,0" VerticalAlignment="Top" Height="51" Width="194" FontSize="30"/>
        <Label Content="Event  Code :" HorizontalAlignment="Left" Margin="69,142,0,0" VerticalAlignment="Top" Height="51" Width="214" FontSize="30"/>
