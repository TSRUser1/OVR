            <TextBox HorizontalAlignment="Left" x:Name="txtMatchNo" PreviewTextInput="NumberValidationTextBox" Height="35" Margin="347,333,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="234"/>
            <Label Content="Competition Stage :" HorizontalAlignment="Left" Margin="138,370,0,0" VerticalAlignment="Top" Height="41" Width="193" FontSize="20" RenderTransformOrigin="0.391,0.289"/>
            <TextBox HorizontalAlignment="Left" x:Name="txtCompetitionStage" PreviewTextInput="NumberValidationTextBox" Height="35" Margin="347,377,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="234"/>
            <Label Content="Total Participants :" HorizontalAlignment="Left" Margin="152,417,0,0" VerticalAlignment="Top" Height="41" Width="180" FontSize="20" RenderTransformOrigin="0.391,0.289"/>
            <TextBox HorizontalAlignment="Left" x:Name="txtTotalParticipant" PreviewTextInput="NumberValidationTextBox"  Height="35" Margin="347,421,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="234"/>
            <Button Content="Submit" HorizontalAlignment="Left" Margin="139,493,0,0" VerticalAlignment="Top" Width="104" Height="47" FontSize="28" Click="BtnSubmit_Click"/>
            <Button Content="Cancel" HorizontalAlignment="Left" Margin="441,493,0,0" VerticalAlignment="Top" Width="104" Height="47" FontSize="28" Click="BtnCancel_Click"/>
            <ComboBox x:Name="cboLocation" HorizontalAlignment="Left" Margin="348,244,0,0" VerticalAlignment="Top" Width="234" Height="35"/>

