      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OVR"
      Background="Gray"
      mc:Ignorable="d"
      Title="Scheduler" Height="616.757" Width="848.954">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,0,5,-0.667">
        <Grid Height="850">
            <Label Content="Scheduler" HorizontalAlignment="Left" Margin="36,22,0,0" VerticalAlignment="Top" Height="54" Width="146" FontSize="28"/>
