            <Label Content="Location :" HorizontalAlignment="Left" Margin="227,247,0,0" VerticalAlignment="Top" Height="41" Width="102" FontSize="20"/>
            <ComboBox x:Name="cboVenue" HorizontalAlignment="Left" Margin="347,199,0,0" VerticalAlignment="Top" Width="234" Height="35"/>
            <Label Content="Round Name :" HorizontalAlignment="Left" Margin="187,283,0,0" VerticalAlignment="Top" Height="41" Width="141" FontSize="20" RenderTransformOrigin="0.391,0.289"/>
